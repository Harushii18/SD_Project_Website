<p hidden id="notice"><%= notice %></p>

<div style="text-align:center">
<br></br>
<h1>Manage Course-Specialty Assignments</h1>

</br>
<%= link_to 'New Course Specialty', new_course_specialty_path, class:"btn btn-primary btn-lg" %>
</br>
</br>
<table class="table">
  <thead>
    <tr>
      <th>Course ID</th>
      <th>Specialty ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_specialties.each do |course_specialty| %>
      <tr>
        <td><%= course_specialty.course_id %></td>
        <td><%= course_specialty.specialty_id %></td>
        <td><%= link_to 'Show', course_specialty %></td>
        <td><%= link_to 'Edit', edit_course_specialty_path(course_specialty) %></td>
        <td><%= link_to 'Destroy', course_specialty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

