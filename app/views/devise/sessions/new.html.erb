<div class="d-flex h-100  text-center">

    <!-- login box -->
  <div class="mx-auto">
  <div class="p-5" >
  <img width="160" src = "../assets/wits logo.png" alt = "Wits Logo">
  </div>

  <div id="Witstitle" >
      <h1>WITS</h1>
      <h2>UNIVERSITY</h2>
      <h2>HEALTH APP</h2>
  </div>
  <div class="form-group p-2 ">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field p-1">
        <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field p-1">
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password" %>
      </div>
</br>
      <div class= "action p-1  ">
        <%= f.submit "Sign in", class: "btn btn-primary", type: "submit" %>
      </div>
    <% end %>
  </div>


  <%= render "devise/shared/links" %>

  </div>
</div>
