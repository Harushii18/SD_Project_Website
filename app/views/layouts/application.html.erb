<style>
  html, body {
    height: 100%;
  }
  body {
    display: flex;
    flex-direction: column;
  }
  .content {
    flex: 1 0 auto;
  }
  .footer {
    flex-shrink: 0;
  }

  div.main-heading{
    padding-top: 60px;
     text-align: center;
  }

  div.main-description{
    position:relative;
    margin: 0 auto;
    word-wrap: break-word;
    width: 600px;
   }

   p.main-description{
     font-family: Verdana;
     padding-bottom: 50px;
    }


  a{
    //font-family: FF Tisa;
    //font-size: 120%;
   }
   h1{
     font-size: 500%;
     font-family: FF Tisa;
   }
   h2{

     font-family: FF Tisa;
   }

   .form_card{
     box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
     transition: 0.3s;
     width: auto;
     height: auto;
     background: white;
     display: flex;
     justify-content: center;
     align-items: center;
     border-radius: 10px;
     padding: 20px;
   }

</style>

 <body>
   <% if admin_signed_in?%>
    <%= render "home/header" %>
   <%end%>

  <%# Added padding to body div so that nav bar does not hide content %>
