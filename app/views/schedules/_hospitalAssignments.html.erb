        <td class="col-2"><%= g.student.studentNumber %></td>

        <td class="col-2">

          <select name="hospital_drop" id="hospital_id"  class="btn btn-secondary dropdown-toggle">
            <%= options = options_from_collection_for_select(Hospital.all, 'id', 'hospital_name') %>

