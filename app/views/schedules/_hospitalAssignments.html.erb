  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col"><h6>Student Name</h6></th>
        <th scope="col"><h6>Student Number</h6></th>
        <th scope="col"><h6>Hospital Assignment</h6></th>

      </tr>

