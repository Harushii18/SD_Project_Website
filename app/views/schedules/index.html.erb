          <th scope="col">Student Number</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>

          

         <th  scope="col">Rotations</th>
        </tr>
      </thead>

  <!---------------------------------------------------------------------------------------------->

  <tbody>

        <% @students.each do |student| %>

          <tr>
          <td class="col-1"><%= student.user_id%></td>
