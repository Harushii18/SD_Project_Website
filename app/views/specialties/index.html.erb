<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-center">

    <button id="myButton" class="btn btn-outline-dark btn-block" >Add new specialty </button>
        <script type="text/javascript">
            document.getElementById("myButton").onclick = function () {
                location.href = "http://localhost:3000/specialties/new";
            };
        </script>
</div>


<div class="m-4">
    <table class="table">
      <thead>
        <tr>
        <th scope="col">Specialty ID</th>
          <th scope="col">Specialty Name</th>
         <th  scope="col"></th>
        </tr>
      </thead>

      <tbody>
        <% @specialties.each do |specialty| %>
          <tr>
          <td class="col-4"><%= specialty.id %></td>
            <td class="col-4"><%= specialty.SpecialtyName %></td>
            
            <td class="col-1">
             
                <div class="btn-group" role="group" aria-label="Basic example">
                <%= link_to 'Edit', edit_specialty_path(specialty), class:"btn btn-outline-dark" %>
                <%= link_to 'Delete', specialty, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-dark" %>
                
                
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>


<br>

