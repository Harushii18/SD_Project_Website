<p hidden id="notice"><%= notice %></p>

<div class="main-heading">
  <h1>Student Groups</h1>
</div>

<div style="text-align: center">
  <%= link_to 'Back', groups_path, class:"btn btn-primary"%>
</div>


  

            <div style="text-align: center;">
    <form action="/student_groups">
    <label> <h5>Filter By Programme Code:</h5> </label>
      <br>
      <select name="programme_id" id="programme_id" onchange="this.form.submit()" class="btn btn-primary dropdown-toggle">
      <%= options = options_from_collection_for_select(Programme.all, 'id', 'programme_code',@current_programme_id) %>
      </select>
    </form>
</div>

 


<table class="table table-hover">
  <thead>
    <tr>
      <th>Group Name</th>
      <th>Student Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_groups.each do |student_group| %>

      <tr>
        <td><%= student_group.group.group_name %></td>
        <td><%= student_group.student.user.user_FirstName%> <%= student_group.student.user.user_LastName%></td>


        <td class="col-3">
          <div class="btn-group" role="group" aria-label="Basic example">
            <%= link_to 'Show', student_group, class:"btn btn-outline-primary" %>
            <%= link_to 'Edit', edit_student_group_path(student_group), class:"btn btn-outline-info" %>
            <%= link_to 'Destroy', student_group_path(student_group), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %>
          </div>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
