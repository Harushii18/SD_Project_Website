<p id="notice"><%= notice %></p>

<h1>Student Groups</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Student</th>
      <th>Group Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_groups.each do |student_group| %>
      <tr>
        <td><%= student_group.student.user.user_FirstName %></td>
        <td><%= student_group.group.group_name %></td>
        <td><%= link_to 'Show', student_group %></td>
        <td><%= link_to 'Edit', edit_student_group_path(student_group) %></td>
        <td><%= link_to 'Destroy', student_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add student to group', new_student_group_path, class:"btn btn-primary btn-lg" %>
