<p hidden id="notice"><%= notice %></p>

<div class="main-heading">
  <h1>Student Groups</h1>
</div>

<div style="text-align: center">
  <%= link_to 'Back', groups_path, class:"btn btn-primary"%>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Group Name</th>
      <th>Student Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_groups.each do |student_group| %>
      <tr>
        <td><%= student_group.group.group_name %></td>
        <td><%= student_group.student.user.user_FirstName%> <%= student_group.student.user.user_LastName%></td>


        <td class="col-3">
          <div class="btn-group" role="group" aria-label="Basic example">
            <%= link_to 'Show', student_group, class:"btn btn-outline-primary" %>
            <%= link_to 'Edit', edit_student_group_path(student_group), class:"btn btn-outline-info" %>
            <%= link_to 'Destroy', student_group, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %>
          </div>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
