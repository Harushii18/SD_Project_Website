<p id="notice"><%= notice %></p>


<div style="text-align:center">
<h1>Students</h1>

<table class="table table-hover ">
  <thead>
    <tr>
      <th>Studentnumber</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Coursecodes</th>
      <th>Programme ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= link_to 'New Student', new_student_path, class: "btn btn-primary", style: "width: 12rem; height: 2.5rem;" %>

  <tbody>
    <% @students.each do |student| %>

      <tr>
        <td><%= student.studentNumber %></td>
        <td><%= @users.find(student.user_id).user_FirstName %></td>
        <td><%= @users.find(student.user_id).user_LastName %></td>
        <td><%= student.courseCodes %></td>
        <td><%= student.programme_id %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>