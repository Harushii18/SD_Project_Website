<br>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">




<table class="table table-hover table-bordered">
  <thead style="background-color: #1757A6; color: white">
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Surname</th>
      <th>Contact Number</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.user_FirstName %></td>
        <td><%= user.user_LastName %></td>
        <td><%= user.user_ContactNo %></td>
        <td><%= user.user_Type %></td>
        <td><%= link_to 'Show', user, class: "btn btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_user_path(user),class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' },class: "btn btn-outline-danger" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="text-center">
  <%= link_to 'Add New User', new_user_path, class: "btn btn-outline-info w-75"%>
</div>


